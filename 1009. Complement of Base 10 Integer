//LEETCODE PROBLEM
//LEVEL - EASY
//1009. Complement of Base 10 Integer

/* C++ PROGRAM */

class Solution {
public:
    int bitwiseComplement(int n) {
        if(n==0) return 1;
        int mask =0;
        int compliment = ~n;
        while(n!=0){
            mask = (mask<<1) | 1;
            n=n>>1;      
        }
        return (compliment & mask);
    }
};
